{
  "manifest_version": 2,

  "name": "EasyGrid",
  "description": "This extension generates new html using web content.",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-2.1.4.min.js", "js/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "EasyGrid"
  },
  "permissions": [
    "tabs",
    "https://ajax.googleapis.com/"
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  }
}
